<Window x:Class="WpfRemotingClient.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="MainWindow" Height="350" Width="525">
    <Grid>
        <Label Content="Remoting Client" Height="28" HorizontalAlignment="Left" Margin="5,5,0,0" Name="lblTitle" VerticalAlignment="Top" />
        <Label Content="Status: Disconnected" Height="28" HorizontalAlignment="Left" Margin="120,5,0,0" Name="lblStatus" VerticalAlignment="Top" />

        <Image Name="imgDesktop" Height="230" HorizontalAlignment="Left" Margin="5,35,0,0" VerticalAlignment="Top"></Image>
        <Button Content="Connect" Height="23" HorizontalAlignment="Left" Margin="5,280,0,0" Name="btnConnect" VerticalAlignment="Top" Width="75" Click="btnConnect_Click" />
    </Grid>

</Window>
